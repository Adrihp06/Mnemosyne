# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...


QDRANT_URL=http://localhost:6333
# Optional: Only needed if Qdrant is configured with authentication
QDRANT_API_KEY=

# Qdrant Collection Settings
QDRANT_COLLECTION_NAME=security_reports

# Model Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSION=1024
RERANK_MODEL=ms-marco-TinyBERT-L-2-v2

# Search Configuration
# Weight for dense vectors (semantic search)
DENSE_WEIGHT=0.7
# Weight for sparse vectors (BM25 keyword search)
SPARSE_WEIGHT=0.3
# Number of candidates to retrieve before re-ranking
TOP_K_CANDIDATES=20
# Number of candidates to re-rank (optimization: reduced from 20 to 10)
RERANK_TOP_K=10
# Number of final results to return
FINAL_TOP_K=5

# Duplicate Detection Thresholds
# Score above this = Duplicate (ðŸ”´)
DUPLICATE_THRESHOLD=0.85
# Score above this = Similar (ðŸŸ¡)
SIMILAR_THRESHOLD=0.65
# Score below this = New (ðŸŸ¢)

# Report Processing
# Maximum tokens before applying truncation strategy
MAX_TOKENS=180000
# Buffer tokens to keep below context window limit
TOKEN_BUFFER=20000

# ReAct Agent Configuration
# Maximum iterations for the agent
REACT_MAX_ITERATIONS=5
# Enable verbose agent logging (true/false)
REACT_VERBOSE=false

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path (leave empty to disable file logging)
LOG_FILE=

# Batch Processing
# Number of reports to process concurrently in batch mode
BATCH_CONCURRENCY=3
# Delay between batches (seconds) to avoid rate limiting
BATCH_DELAY=1